Scanner s = new Scanner(System.in);
        int[] numero = new int[10];

        for (int i = 0; i < 10; i++) {
            System.out.println("Digite o número na posição " + (i+1) + " : ");
            numero[i] = s.nextInt();
        }
        Arrays.sort(numero);
        System.out.println("Ordem decrescente: ");
        for (int i = 10; i > 0; i--) {
            System.out.println(numero[i - 1]);
        }
