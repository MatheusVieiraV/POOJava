int [] posicao = new int[4];
        int soma = 0;
        int media = 0;
        
        Scanner s = new Scanner(System.in);

        for (int i = 0; i < 4; i++){
            System.out.println("Digite o valor da posição "+(i+1)+" : ");

            posicao[i]  = s.nextInt();

            soma += posicao[i];
        }

        media = soma / 4;

        System.out.println("A média dos valores é: "+media);
